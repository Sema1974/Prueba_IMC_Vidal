<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IMCResulActivity"
    android:background="@color/bg_app">

    <LinearLayout
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Resueltado"
            android:textAllCaps="false"
            android:textSize="32sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/principal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="32dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/primero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="16dp">
            <TextView
                android:id="@+id/resultadofinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="@color/teal_200"
                android:layout_marginTop="36dp"/>

            <TextView
                android:id="@+id/numefinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jffjkkjfjk"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_marginTop="36dp"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/sentenciafinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jffjkkjfjk"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="36dp"
                android:textColor="@color/teal_200"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botonReCalcular"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/recalcular"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/bg_button"
        android:gravity="center"
        android:layout_margin="56dp"
        app:layout_constraintTop_toBottomOf="@id/principal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>